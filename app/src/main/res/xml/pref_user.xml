<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="@string/first_name"
        android:title="@string/pref_title_first_name"
        android:defaultValue="@string/pref_default_first_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="@string/second_name"
        android:title="@string/pref_title_second_name"
        android:defaultValue="@string/pref_default_second_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="@string/phone"
        android:title="@string/pref_title_phone"
        android:defaultValue="@string/pref_default_phone"
        android:selectAllOnFocus="true"
        android:inputType="phone"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="@string/email"
        android:title="@string/pref_title_email"
        android:defaultValue="@string/pref_default_email"
        android:selectAllOnFocus="true"
        android:inputType="textEmailAddress"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
